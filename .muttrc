set smtp_url = "smtp://fstinglmayr@smtp.gmail.com:587/"
set from = "fstinglmayr@gmail.com"
set realname = "Florian Stinglmayr"

set mbox_type = Maildir
set folder = "~/.mail/"
set mbox = "~/.mail/"
set record = "+sent"
set postponed = "+postponed"

# Caching for better performance
set header_cache = "~/.mutt/headers"
set message_cachedir = "~/.mutt/bodies"
set charset = "utf-8"
set send_charset = "utf-8

set query_command = "abook --mutt-query '%s'"
macro generic,index,pager \ca "<shell-escape>abook<return>" "Launch abook."
macro index,pager A "<pipe-message>abook --add-email<return>" "Add the sender to abook."

source ~/.dotfiles/.muttrc.crypto

macro index I "c!\n"   "Go to INBOX"
macro index G "<shell-escape>fetchmail<return>" "Launch fetchmail."

ignore *
unignore Subject
unignore From
unignore Date
unignore Cc
unignore To
unignore User-Agent

# Various other settings that make mutt work 
# better with GMail
set timeout=15
set mail_check=60

set sort = 'threads'
set sort_aux = 'last-date-received'

set charset = "utf8"
set send_charset = "utf8"

set delete = yes
set move = no

auto_view text/html;

source ~/.mutt/mutt-colors-solarized-dark-16.muttrc

