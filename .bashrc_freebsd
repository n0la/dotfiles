# FreeBSD specific stuff. Mostly specific to my main box

BACK_JACK=4
FRONT_JACK=5

# The following entry to /usr/local/etc/sudoers file is required:
# flo ALL = NOPASSWD:/sbin/sysctl
speakers() {
  sudo sysctl hw.snd.default_unit=$BACK_JACK
}

headphones() {
  sudo sysctl hw.snd.default_unit=$FRONT_JACK
}

check-dotfiles() {
  OLD=`pwd`
  cd ~/.dotfiles
  git status | grep -q "nothing to commit"
  RET=$?
  if [ $RET != 0 ]; then
    echo "You have unstaged changes in your dotfiles."
  fi
  cd $OLD
}

